
@model FinanceManage.Models.Purchase

<form method="post" asp-action="Update">
    <input asp-for="purchaseId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Purchase</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">

                    <div class="col-1">
                        <label asp-for="puchaseDate"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="puchaseDate" type="date" class="form-control" />
                    </div>
                    <div class="col-1">
                        <label asp-for="InvoiceNo"> </label>
                    </div>
                    <div class="col-3">
                        <input id="invoiceNo" type="text" asp-for="InvoiceNo" class="form-control" />
                    </div>
                    <div class="col-1">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-3">
                        <select id="name" asp-for="Name" class="form-control">
                            <option>Select Name </option>
                            <option>Bakers </option>
                            <option>Sainsbury </option>
                            <option>Heera </option>
                            <option>TRS </option>
                            <option>Staff </option>
                            <option>Veenas </option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="Amount"> </label>
                    </div>
                    <div class="col-3">
                        <input id="amount" type="text" asp-for="Amount" class="form-control" onkeyup="calculateTotal()" />
                    </div>
                    <div class="col-1">
                        <label asp-for="vat"> </label>
                    </div>
                    <div class="col-3">
                        <input id="vat" type="text" asp-for="vat" class="form-control" onkeyup="calculateTotal()" />
                    </div>
                    <div class="col-1">
                        <label asp-for="total"> </label>
                    </div>
                    <div class="col-3">
                        <input id="total" type="text" asp-for="total" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="firstPayment"></label>
                    </div>
                    <div class="col-3">
                        <input id="firstPayment" type="text" asp-for="firstPayment" class="form-control" onkeyup="calculateRemain()" />
                    </div>
                    <div class="col-2">
                        <label asp-for="firstPaidDate"> </label>
                    </div>
                    <div class="col-3">
                        <input id="firstPaidDate" type="date" value="0" asp-for="firstPaidDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label>Remaining</label>
                    </div>
                    <div class="col-3">
                        <output type="text" id="remain"></output>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="secondPayment"> </label>
                    </div>
                    <div class="col-3">
                        <input id="secondPayment" asp-for="secondPayment" class="form-control" />
                    </div>
                    <div class="col-2">
                        <label asp-for="secondPaidDate"></label>
                    </div>
                    <div class="col-3">
                        <input id="secondPaidDate" type="date" value="0" asp-for="secondPaidDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-2">
                        <label asp-for="paymentType"></label>
                    </div>
                    <div class="col-3">
                        <select class="form-control" id="paymentType" asp-for="paymentType">
                            <option>Select Payment Type</option>
                            <option>Card</option>
                            <option>Cash</option>
                            <option>Credit</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</form>

@section scripts {
    <script type="text/javascript">

        //Return the Total of sales and other
        function calculateRemain() {

            var txtA = $('#total');
            var txtB = $('#firstPayment');
            var txtResult = $('#remain');

            //txtResult.html(parseFloat(txtA.val()) + parseFloat(txtB.val()));
            txtResult.val(parseFloat(txtA.val()) - parseFloat(txtB.val()));
        }
        //Calculate Gross Sales of the Income
        function calculateTotal() {
            var val1 = $('#amount');
            var val2 = $('#vat');
            var sal = $('#total');

            sal.val((parseFloat(val1.val()) * parseFloat(val2.val()) / 100) + parseFloat(val1.val()));
        }

    </script>
}