
@model FinanceManage.Models.Income

<form method="post" asp-action="DeletePost">
    <input asp-for="incomeId" hidden />
    <div class="border p-3">        
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Income Record</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="IncomeDate"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="IncomeDate" type="date" name="Date" disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="sales" ></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="sales" disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="other"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="other"  disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="total"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="total" disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="netSales"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="netSales" disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="vat"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="vat"  disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="grossSales"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="grossSales"  disabled class="form-control" />

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="cash"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="cash"  disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="card"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="card" disabled class="form-control" />

                    </div>
                    <div class="col-1">
                        <label asp-for="credit"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="credit" disabled class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
            </div>
    </div>
</form>



